<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/for_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95B309"
    android:paddingBottom="15dp"
    tools:context=".questionsandanswers.ViewQuestionsComplete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/grade_of_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Class X"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/subject_and_chapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Maths: Chapter 2"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/asked_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Asked on 20/03/2020" />

        <TextView
            android:id="@+id/tv_question_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="I had a doubt in Exercise 2.2 Question 3 (Image attached). How can we apply chain rule using partial differentiation to achieve back-propagation"
            android:textSize="15sp" />

        <FrameLayout
            android:id="@+id/fl_view_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <View style="@style/Divider" />

        <LinearLayout
            android:id="@+id/teacher_only_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/view_all_answers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View All Answers"
                android:layout_marginTop="15dp"
                android:backgroundTint="#3B5A13"
                android:layout_marginRight="2dp"
                android:layout_gravity="end"/>

            <Button
                android:id="@+id/write_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Write\nAnswer"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#3B5A13"
                android:layout_gravity="end"/>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_view_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>