<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ans_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:clickable="true"
            android:paddingVertical="5dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/teacher_name_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Aman Pratap Singh on 17/12/2020" />

            <ImageView
                android:id="@+id/arrow_view_answers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_down"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ans_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ans_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp"
                android:text="This is a very classical question in this topic. First you take the derivative with respect to x and then the derivative with respect to y."
                android:textSize="17sp"/>

            <Button
                android:id="@+id/ans_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete this answer"
                android:layout_gravity="end"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fl_ans_images"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>