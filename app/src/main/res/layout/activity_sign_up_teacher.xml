<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginsignup.SignUpTeacherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignUp (Teacher)"
            android:textSize="30sp"
            android:background="@color/appbar"
            android:paddingVertical="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/teacher_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:hint="Teacher ID"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:hint="Name of teacher"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/teacher_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:hint="Email Id"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Subject"
            android:layout_marginHorizontal="5dp"
            android:textSize="20sp"
            android:layout_marginTop="15dp"/>

        <RadioGroup
            android:id="@+id/teacher_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/science"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onSelectSubject"
                android:text="Science"/>
            <RadioButton
                android:id="@+id/maths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onSelectSubject"
                android:text="Mathematics"/>
            <RadioButton
                android:id="@+id/sst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onSelectSubject"
                android:text="Social Science Studies (SST)"/>
        </RadioGroup>

        <EditText
            android:id="@+id/teacher_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/teacher_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:hint="Password (6 characters minimum)"
            android:inputType="textPassword"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/teacher_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/teacher_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_marginTop="25dp"
            android:text="Register me"
            android:textSize="20sp"
            android:textColor="#000000"
            app:backgroundTint="@color/appbar_light"/>

    </LinearLayout>

</ScrollView>